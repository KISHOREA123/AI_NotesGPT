# Environment
NODE_ENV=development
PORT=3001

# Supabase Configuration (Free Tier - 500MB database)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Upstash Redis Configuration (Free Tier - 10K requests/day)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary Configuration (Free Tier - 25GB storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Resend Email Configuration (Free Tier - 3K emails/month)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Hugging Face Configuration (Free Tier)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# AI Chat API Keys
# DeepSeek API (FREE until Jan 1, 2026)
DEEPSEEK_API_KEY=your_deepseek_api_key

# OpenAI Configuration (Optional - use free credits)
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude API (Optional - $5 free credits)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Sentry Configuration (Free Tier - 5K errors/month)
SENTRY_DSN=your_sentry_dsn

# Application Configuration
APP_NAME=AI Notes
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_NOTE=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain

# AI Configuration
MAX_AI_REQUESTS_PER_DAY=50
AI_CACHE_TTL_HOURS=24

# Database Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Cache Configuration
CACHE_TTL_USER_PROFILE=7200
CACHE_TTL_NOTES=1800
CACHE_TTL_AI_RESULTS=172800
